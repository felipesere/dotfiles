export ZDOTDIR=$HOME
export TERM='xterm-256color'
export LANG="en_US.UTF-8"
export EDITOR=vim
export CLICOLOR=1
export LSCOLORS=exfxbxdxexegedabagacad
export HISTFILE=~/.histfile
export HISTSIZE=10000
export SAVEHIST=1000
export WORDCHARS=''
export PATH=/Users/felipe/bin:$PATH
export FZF_DEFAULT_COMMAND='ag -g ""'
export ENHANCD_FILTER=$(which fzf)

fpath=(/usr/local/share/zsh-completions $fpath)

autoload -Uz compinit && compinit
autoload -Uz colors  && colors
autoload -Uz vcs_info

zstyle ':completion:*:default' list-colors ${(s.:.)LS_COLORS}
zstyle ':completion:*:*:*:*:*' menu select

source "$HOME/Development/config/dotfiles/zsh-minimal/prompt.zsh"
source "$HOME/Development/config/dotfiles/zsh-minimal/options.zsh"

bindkey -e
bindkey "[3~" delete-char
bindkey '^w' backward-kill-word

zstyle :compinstall filename "$HOME/.zshrc"

alias vim="nvim"

# Chruby - The Switcher Of Rubies.
source /usr/local/share/chruby/chruby.sh
source /usr/local/share/chruby/auto.sh

archey -c -o

[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh

source "$HOME/Development/config/dotfiles/zsh-minimal/plugins.zsh"
