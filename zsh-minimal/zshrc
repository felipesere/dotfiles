export ZDOTDIR=$HOME
export LANG="en_US.UTF-8"
export EDITOR=vim
export CLICOLOR=1
export LSCOLORS=exfxbxdxexegedabagacad
export HISTFILE=~/.histfile
export HISTSIZE=10000
export SAVEHIST=1000
export WORDCHARS=''
export ENHANCD_FILTER="$(which fzf) --reverse --height 50%"
export ENHANCD_DISABLE_DOT=1
export RIPGREP_CONFIG_PATH=~/.ripgrep
export FZF_DEFAULT_COMMAND="rg --files"
export PIPENV_VENV_IN_PROJECT="true"

# Local binaries
export PATH=$PATH:/Users/felipesere/bin

tic ~/.dotfiles/iterm2/xterm-256color-italic.terminfo

fpath=(/usr/local/share/zsh-completions $fpath)

autoload -Uz compinit && compinit -u
autoload -Uz colors  && colors
autoload -Uz vcs_info

zstyle ':completion:*:default' list-colors ${(s.:.)LS_COLORS}
zstyle ':completion:*:*:*:*:*' menu select

source "$HOME/.dotfiles/zsh-minimal/plugins.zsh"
source "$HOME/.dotfiles/zsh-minimal/theme.zsh"
source "$HOME/.dotfiles/zsh-minimal/options.zsh"

bindkey -e
bindkey "[3~" delete-char
bindkey "^[[3~" delete-char
bindkey "^[3;5~" delete-char
bindkey "\e[3~" delete-char

# [Backspace] - delete backward
bindkey '^?' backward-delete-char
bindkey '^w' backward-kill-word

# [Ctrl-RightArrow] - move forward one word
bindkey '^[[1;5C' forward-word

# [Ctrl-LeftArrow] - move backward one word
bindkey '^[[1;5D' backward-word

zstyle :compinstall filename "$HOME/.zshrc"

alias vim="nvim"
alias vi="nvim"

# Kiex
test -s "$HOME/.kiex/scripts/kiex" && source "$HOME/.kiex/scripts/kiex"

# iterm2 integrations
[ -f ~/.dotfiles/iterm2/it2setkeylabel ] && export PATH=$PATH:~/.dotfiles/iterm2



[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh

export JAVA_HOME=/Library/Java/JavaVirtualMachines/jdk-9.0.1.jdk/Contents/Home

[ -f ~/.work ] && source ~/.work

source "/usr/local/Caskroom/google-cloud-sdk/latest/google-cloud-sdk/completion.zsh.inc"
source "/usr/local/Caskroom/google-cloud-sdk/latest/google-cloud-sdk/path.zsh.inc"


rg() {
    if [ -t 1 ]; then
        command rg -p "$@" | less -RFX
    else
        command rg "$@"
    fi
}

c() {
  IN_REPO=$(git rev-parse --is-inside-work-tree)
  if [ "$IN_REPO" = "true" ]; then
    builtin cd -q $(git root)
  fi
}

title() {
    echo -ne "\033]0;"$*"\007"
}
