  email = felipesere@gmail.com
	signingkey = B12F040F934D78D0

[github]
  user = felipesere

[core]
  pager = diff-so-fancy | less --tabs=4 -RFX
  whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
  autocrlf = input
  safecrlf = true
  excludesfile = /Users/felipe/.gitignore
  ignorecase = false
  quotepath = false
  editor = "nvim"

[web]
  browser = open

[push]
  config = default
  default = current

[rebase]
  autosquash = true

[merge]
  summary = true

[color]
  interactive = auto
  ui = true
  pager = true

[color "grep"]
  filename = blue
  linenumber = green

[color "branch"]
  current = yellow reverse
  local   = yellow
  remote  = green

[color "diff"]
  meta = blue
  frag = magenta
  old  = red
  new  = green

[color "status"]
  added = yellow
  changed = green
  untracked = blue

[grep]
  linenumber = true

[alias]
  a   = add -u
  b   = branch
  bb  = !git-br
  aa  = add --all :/
  c   = commit -v
  co  = checkout
  d   = diff
  ds  = diff --staged
  dw  = diff --color-words
  s   = status -s -b
  w   = whatchanged --decorate -p
  l   = !git ll -20
  ll  = log --pretty='format:%C(yellow)%h %C(blue)%ad %C(reset)%s%C(red)%d %C(green)%an%C(reset), %C(cyan)%ar' --date=short
  ld  = !git ll --since 1.days.ago
  lw  = !git ll --since 1.weeks.ago
  lg  = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  incoming   = !git l ..@{u}
  outgoing   = !git l @{u}..
  conflicts = diff --name-only --diff-filter=U
  sha = rev-parse --short HEAD
  root = rev-parse --show-toplevel

[credential]
  helper = osxkeychain
[ghi]
	token = !security find-internet-password -a felipesere -s github.com -l 'ghi token' -w
[commit]
	gpgsign = true
[diff-so-fancy]
	markEmptyLines = false
