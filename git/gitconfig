# vi: ft=gitconfig
[user]
name = Felipe Sere
email = github@felipesere.com

[github]
user = felipesere

[core]
autocrlf = input
editor = "nvim"
excludesfile = ~/.gitignore
ignorecase = false
pager = delta
quotepath = false
safecrlf = true
whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol

[delta]
# Changing this variable toggles the light/dark mode
features = dark

commit-decoration-style      = "bold yellow box ul"
file-style                   = "bold yellow"
file-decoration-style        = "bold yellow box ul"
hunk-header-style            = "bold blue"
hunk-header-decoration-style = "blue box"

[delta "light"]
light = false
syntax-theme = Monokai Extended Light

[delta "dark"]
light            = false
syntax-theme     = DarkNeon
# plus-style       = "syntax #2d4a16"
# plus-emph-style  = "white  #6B8C4F"
# minus-style      = "syntax #60141B"
# minus-emph-style = "white  #88323A"

[pull]
rebase = true

[interactive]
diffFilter = delta --color-only

[push]
autoSetupRemote = true

[merge]
conflictStyle = diff3

[color]
interactive = auto
ui = true
pager = true

[color "branch"]
current = yellow

[color "status"]
added = yellow
changed = green
untracked = blue
deleted = red

[alias]
a   = add -u
b   = branch
bb  = !git for-each-ref --sort=committerdate refs/heads/ --format='%(HEAD) %(color:yellow)%(refname:short)%(color:reset) - %(color:red)%(objectname:short)%(color:reset) - %(contents:subject) - %(authorname) (%(color:green)%(committerdate:relative)%(color:reset))'
aa  = add --all :/
c   = commit -v
recommit = commit --amend --no-edit
d   = diff
ds  = diff --staged
s   = status -s -b
l   = !git ll -20
ll  = log --pretty='format:%C(yellow)%h %C(blue)%ad %C(reset)%s%C(red)%d %C(green)%an%C(reset), %C(cyan)%ar' --date=short
ld  = !git ll --since 1.days.ago
lw  = !git ll --since 1.weeks.ago
incoming   = !git ll ..@{u}
outgoing   = !git ll @{u}..
conflicts = diff --name-only --diff-filter=U
sha = rev-parse --short HEAD
root = rev-parse --show-toplevel
prs = !GH_FORCE_TTY="100%" gh pr list | fzf --ansi --header-lines 3 | awk '{print $1}' | xargs gh pr checkout
unstage = restore --staged

[credential]
helper = store

[init]
defaultBranch = main

[includeIf "gitdir:~/Development/truelayer/"]
  path = ~/.gitconfig-truelayer
